<!doctype html>
<html lang="en">
    <head>
        {% include meta %}
        <title>Daniel Canetti • Blog • {{ postTitle }}</title>
        <meta property="og:locale" content="en_GB" />
        <meta property="og:site_name" content="Daniel Canetti" />
        <meta property="og:title" content="{{ postTitle }}" />
        <meta property="og:description" content="{{ postExcerpt }}" />
        <meta property="og:url" content="https://danielcanetti.com{{ page.url }}" />
        <meta property="og:image" content="https://danielcanetti.com{{ postFeatureImage }}" />
        <meta property="twitter:card" content="summary_large_image">
        <meta property="twitter:title" content="{{ postTitle }}">
        <meta property="twitter:description" content="{{ postExcerpt }}">
        <meta property="twitter:image" content="https://danielcanetti.com{{ postFeatureImage }}">
        <meta property="twitter:url" content="https://danielcanetti.com{{ page.url }}">
        <meta property="twitter:site" content="@Dan_Canetti">
        <meta property="twitter:creator" content="@Dan_Canetti">
    </head>
    <body class="{{ pageClass }}">
      <div class="wrapper">
        {% include nav %}
        <div id="top" class="header">
          <h1 class="title">{{ postTitle }}</h1>
          <span>{{ postDate }}</span>
          <img src="{{ postFeatureImage }}" />
        </div>
        <div class="content {{ pageClass }}">
          {{ content }}
          <a href="#top" class="top">Back to top</a>
        </div>
      </div>
      {% include footer %}
    </body>
</html>
