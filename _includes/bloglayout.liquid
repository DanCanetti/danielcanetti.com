<!doctype html>
<html lang="en">
    <head>
        {% include meta %}
        <title>Daniel Canetti • Blog • {{ postTitle }}</title>
        <meta property="og:locale" content="en_GB" />
        <meta property="og:site_name" content="Daniel Canetti" />
        <meta property="og:title" content="{{ postTitle }}" />
        <meta property="og:description" content="{{ postExcerpt }}" />
        <meta property="og:url" content="https://danielcanetti.com{{ page.url }}" />
        <meta property="og:image" content="https://danielcanetti.com{{ postFeatureImage }}" />
    </head>
    <body class="{{ pageClass }}">
      <div class="wrapper">
        {% include nav %}
        <div id="top" class="header">
          <h1 class="title">{{ postTitle }}</h1>
          <span>{{ postDate }}</span>
          <img src="{{ postFeatureImage }}" />
        </div>
        <div class="content">
          {{ content }}
          <a href="#top" class="top"><img src="/images/top.svg" /></a>
        </div>
      </div>
      {% include footer %}
    </body>
</html>
